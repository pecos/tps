#!./bats
# -*- mode: sh -*-

TEST="mms/ternary_plasma_2d_wall"
RUNFILE="inputs/mms.ternary_plasma.2d.wall.ini"

setup() {
    SOLN_FILE=restart_argon_output.sol.h5
    MESH_FILE=beam-quad-o3-s1-r1-xp.mesh
}

@test "[$TEST] check for input file $RUNFILE" {
    test -s $RUNFILE
}

@test "[$TEST] create a mesh file" {
    ../utils/beam_mesh -nx 1 -nt 5 -b 5 -rs 1 -dir 0

    test -s $MESH_FILE
}

@test "[$TEST] run tps with input -> $RUNFILE" {
    mpirun -np 2 ../src/tps --runFile $RUNFILE >& plasma_ternary_mms.wall.log
}

@test "[$TEST] check if the relative error is similar to the reported value" {
    while IFS=$'\t' read -r nx e0 e1 e2 e3 e4 e5;
    do
      test $nx -eq 100
      # empirically observed error 1.792e-3
      check_lo=$(awk 'BEGIN{print ('$e0'>1.785e-3)?1:0}')
      check_hi=$(awk 'BEGIN{print ('$e0'<1.795e-3)?1:0}')
      test $check_lo -eq 1
      test $check_hi -eq 1
      # empirically observed error 0.7511
      check_lo=$(awk 'BEGIN{print ('$e1'>0.745)?1:0}')
      check_hi=$(awk 'BEGIN{print ('$e1'<0.755)?1:0}')
      test $check_lo -eq 1
      test $check_hi -eq 1
      # empirically observed error 0.8917
      check_lo=$(awk 'BEGIN{print ('$e2'>0.885)?1:0}')
      check_hi=$(awk 'BEGIN{print ('$e2'<0.895)?1:0}')
      test $check_lo -eq 1
      test $check_hi -eq 1
      # empirically observed error 2.9574e-3
      check_lo=$(awk 'BEGIN{print ('$e3'>2.95e-3)?1:0}')
      check_hi=$(awk 'BEGIN{print ('$e3'<2.96e-3)?1:0}')
      test $check_lo -eq 1
      test $check_hi -eq 1
      # empirically observed error 2.9744e-3
      check_lo=$(awk 'BEGIN{print ('$e4'>2.97e-3)?1:0}')
      check_hi=$(awk 'BEGIN{print ('$e4'<2.98e-3)?1:0}')
      test $check_lo -eq 1
      test $check_hi -eq 1
      # empirically observed error 4.9651e-3
      check_lo=$(awk 'BEGIN{print ('$e5'>4.96e-3)?1:0}')
      check_hi=$(awk 'BEGIN{print ('$e5'<4.97e-3)?1:0}')
      test $check_lo -eq 1
      test $check_hi -eq 1
    done < ternary_2d_2t_ambipolar_wall.rel_error.txt
}
