@test "[$TEST] run tps with input -> $RUNFILE" {
    rm -rf output/*
    rm -f $SOLN_FILE
    run $EXE --runFile $RUNFILE
    test -s $SOLN_FILE
}

@test "[$TEST] verify tps output with input -> $RUNFILE" {
    test -s $SOLN_FILE
    test -s $REF_FILE
    h5diff -r --relative=1e-13 $SOLN_FILE $REF_FILE /temperature/temperature
}
