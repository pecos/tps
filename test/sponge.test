TEST="spongeBox"
RUNFILE="inputs/input.spongeZF.ini"
EXE="../src/tps"
RESTART="ref_solns/spongeBox/restart_output.sol.h5"

setup() {
    SOLN_FILE=restart_output.sol.h5
    REF_FILE=ref_solns/spongeBox/restart_output.sol.h5
}

@test "[$TEST] check for input file $RUNFILE" {
    test -s $RUNFILE
}

