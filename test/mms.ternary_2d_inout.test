#!./bats
# -*- mode: sh -*-

TEST="mms/ternary_plasma_2d_inoutlet"
RUNFILE="inputs/mms.ternary_plasma.2d.inout.ini"

setup() {
    SOLN_FILE=restart_argon_output.sol.h5
    MESH_FILE=beam-quad-o3-s1-r1-yp.mesh
}

@test "[$TEST] check for input file $RUNFILE" {
    test -s $RUNFILE
}

@test "[$TEST] create a mesh file" {
    ../utils/beam_mesh -nx 1 -nt 5 -b 5 -rs 1 -dir 1

    test -s $MESH_FILE
}

@test "[$TEST] run tps with input -> $RUNFILE" {
    mpirun -np 2 ../src/tps --runFile $RUNFILE >& plasma_ternary_mms.inout.log
}

@test "[$TEST] check if the relative error is similar to the reported value" {
    while IFS=$'\t' read -r nx e0 e1 e2 e3 e4 e5;
    do
      test $nx -eq 100
      # empirically observed error 1.094e-3
      check_lo=$(awk 'BEGIN{print ('$e0'>1.09e-3)?1:0}')
      check_hi=$(awk 'BEGIN{print ('$e0'<1.10e-3)?1:0}')
      test $check_lo -eq 1
      test $check_hi -eq 1
      # empirically observed error 0.0339
      check_lo=$(awk 'BEGIN{print ('$e1'>0.03)?1:0}')
      check_hi=$(awk 'BEGIN{print ('$e1'<0.04)?1:0}')
      test $check_lo -eq 1
      test $check_hi -eq 1
      # empirically observed error 0.04955
      check_lo=$(awk 'BEGIN{print ('$e2'>0.04)?1:0}')
      check_hi=$(awk 'BEGIN{print ('$e2'<0.05)?1:0}')
      test $check_lo -eq 1
      test $check_hi -eq 1
      # empirically observed error 1.364e-3
      check_lo=$(awk 'BEGIN{print ('$e3'>1.3e-3)?1:0}')
      check_hi=$(awk 'BEGIN{print ('$e3'<1.4e-3)?1:0}')
      test $check_lo -eq 1
      test $check_hi -eq 1
      # empirically observed error 1.374e-3
      check_lo=$(awk 'BEGIN{print ('$e4'>1.3e-3)?1:0}')
      check_hi=$(awk 'BEGIN{print ('$e4'<1.4e-3)?1:0}')
      test $check_lo -eq 1
      test $check_hi -eq 1
      # empirically observed error 1.693e-3
      check_lo=$(awk 'BEGIN{print ('$e5'>1.6e-3)?1:0}')
      check_hi=$(awk 'BEGIN{print ('$e5'<1.7e-3)?1:0}')
      test $check_lo -eq 1
      test $check_hi -eq 1
    done < ternary_2d_2t_ambipolar_inoutlet.rel_error.txt
}
