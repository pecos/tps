#!./bats
# -*- mode: sh -*-

TEST="mms/ternary_plasma_2d"
RUNFILE="inputs/mms.ternary_plasma.2d.ini"

setup() {
    SOLN_FILE=restart_argon_output.sol.h5
    MESH_FILE=beam-quad-o3-s1-r1-p.mesh
    TOL=2e-4
}

@test "[$TEST] check for input file $RUNFILE" {
    test -s $RUNFILE
}

@test "[$TEST] create a mesh file" {
    ../utils/beam_mesh -nx 1 -nt 5 -b 5 -rs 1    # no refinement

    test -s $MESH_FILE
}

@test "[$TEST] run tps with input -> $RUNFILE" {
    mpirun -np 2 ../src/tps --runFile $RUNFILE >& plasma_ternary_mms.log
}

@test "[$TEST] check if the relative error is similar to the reported value" {
    while IFS=$'\t' read -r nx e0 e1 e2 e3 e4 e5;
    do
      test $nx -eq 100
      # empirically observed error 1.172e-3
      check_lo=$(awk 'BEGIN{print ('$e0'>1.17e-3)?1:0}')
      check_hi=$(awk 'BEGIN{print ('$e0'<1.18e-3)?1:0}')
      test $check_lo -eq 1
      test $check_hi -eq 1
      # empirically observed error 0.361
      check_lo=$(awk 'BEGIN{print ('$e1'>0.36)?1:0}')
      check_hi=$(awk 'BEGIN{print ('$e1'<0.37)?1:0}')
      test $check_lo -eq 1
      test $check_hi -eq 1
      # empirically observed error 0.659
      check_lo=$(awk 'BEGIN{print ('$e2'>0.655)?1:0}')
      check_hi=$(awk 'BEGIN{print ('$e2'<0.665)?1:0}')
      test $check_lo -eq 1
      test $check_hi -eq 1
      # empirically observed error 1.508e-3
      check_lo=$(awk 'BEGIN{print ('$e3'>1.45e-3)?1:0}')
      check_hi=$(awk 'BEGIN{print ('$e3'<1.55e-3)?1:0}')
      test $check_lo -eq 1
      test $check_hi -eq 1
      # empirically observed error 3.140e-3
      check_lo=$(awk 'BEGIN{print ('$e4'>3.135e-3)?1:0}')
      check_hi=$(awk 'BEGIN{print ('$e4'<3.145e-3)?1:0}')
      test $check_lo -eq 1
      test $check_hi -eq 1
      # empirically observed error 2.177e-3
      check_lo=$(awk 'BEGIN{print ('$e5'>2.17e-3)?1:0}')
      check_hi=$(awk 'BEGIN{print ('$e5'<2.18e-3)?1:0}')
      test $check_lo -eq 1
      test $check_hi -eq 1
    done < periodic_ternary_2d.rel_error.txt
}
